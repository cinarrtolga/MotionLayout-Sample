<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/swipeLeft"
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start"
        app:duration="1000">

        <KeyFrameSet>
            <KeyPosition
                app:framePosition="25"
                app:keyPositionType="parentRelative"
                app:motionTarget="@id/image_sign"
                app:percentX="-0.5"
                app:percentY="0.3" />

            <KeyPosition
                app:framePosition="75"
                app:keyPositionType="parentRelative"
                app:motionTarget="@id/image_sign"
                app:percentX="1.5"
                app:percentY="0.3" />

            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="25"
                app:motionTarget="@id/image_sign" />

            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="75"
                app:motionTarget="@id/image_sign" />

            <KeyAttribute
                android:alpha="1.0"
                app:framePosition="100"
                app:motionTarget="@id/image_sign" />

            <KeyPosition
                app:framePosition="25"
                app:keyPositionType="parentRelative"
                app:motionTarget="@id/description_background"
                app:percentX="0.5"
                app:percentY="0.9" />

            <KeyPosition
                app:framePosition="75"
                app:keyPositionType="parentRelative"
                app:motionTarget="@id/description_background"
                app:percentX="0.5"
                app:percentY="0.9" />

            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="25"
                app:motionTarget="@id/description_background" />

            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="75"
                app:motionTarget="@id/description_background" />

            <KeyAttribute
                android:alpha="1.0"
                app:framePosition="100"
                app:motionTarget="@id/description_background" />

            <KeyPosition
                app:framePosition="25"
                app:keyPositionType="parentRelative"
                app:motionTarget="@id/title_text"
                app:percentX="0.5"
                app:percentY="0.95" />

            <KeyPosition
                app:framePosition="75"
                app:keyPositionType="parentRelative"
                app:motionTarget="@id/title_text"
                app:percentX="0.5"
                app:percentY="0.95" />

            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="25"
                app:motionTarget="@id/title_text" />

            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="75"
                app:motionTarget="@id/title_text" />

            <KeyAttribute
                android:alpha="1.0"
                app:framePosition="100"
                app:motionTarget="@id/title_text" />

            <KeyPosition
                app:framePosition="25"
                app:keyPositionType="parentRelative"
                app:motionTarget="@id/description_text"
                app:percentX="0.5"
                app:percentY="1.1" />

            <KeyPosition
                app:framePosition="75"
                app:keyPositionType="parentRelative"
                app:motionTarget="@id/description_text"
                app:percentX="0.5"
                app:percentY="1.1" />

            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="25"
                app:motionTarget="@id/description_text" />

            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="75"
                app:motionTarget="@id/description_text" />

            <KeyAttribute
                android:alpha="1.0"
                app:framePosition="100"
                app:motionTarget="@id/description_text" />
        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/swipeRight"
        app:constraintSetEnd="@id/endRight"
        app:constraintSetStart="@id/startRight"
        app:duration="1000">

        <KeyFrameSet>
            <KeyPosition
                app:framePosition="25"
                app:keyPositionType="parentRelative"
                app:motionTarget="@id/image_sign"
                app:percentX="1.5"
                app:percentY="0.3" />

            <KeyPosition
                app:framePosition="75"
                app:keyPositionType="parentRelative"
                app:motionTarget="@id/image_sign"
                app:percentX="-0.5"
                app:percentY="0.3" />

            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="25"
                app:motionTarget="@id/image_sign" />

            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="75"
                app:motionTarget="@id/image_sign" />

            <KeyAttribute
                android:alpha="1.0"
                app:framePosition="100"
                app:motionTarget="@id/image_sign" />

            <KeyPosition
                app:framePosition="25"
                app:keyPositionType="parentRelative"
                app:motionTarget="@id/description_background"
                app:percentX="0.5"
                app:percentY="0.9" />

            <KeyPosition
                app:framePosition="75"
                app:keyPositionType="parentRelative"
                app:motionTarget="@id/description_background"
                app:percentX="0.5"
                app:percentY="0.9" />

            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="25"
                app:motionTarget="@id/description_background" />

            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="85"
                app:motionTarget="@id/description_background" />

            <KeyAttribute
                android:alpha="1.0"
                app:framePosition="100"
                app:motionTarget="@id/description_background" />

            <KeyPosition
                app:framePosition="25"
                app:keyPositionType="parentRelative"
                app:motionTarget="@id/title_text"
                app:percentX="0.5"
                app:percentY="0.95" />

            <KeyPosition
                app:framePosition="85"
                app:keyPositionType="parentRelative"
                app:motionTarget="@id/title_text"
                app:percentX="0.5"
                app:percentY="0.95" />

            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="25"
                app:motionTarget="@id/title_text" />

            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="85"
                app:motionTarget="@id/title_text" />

            <KeyAttribute
                android:alpha="1.0"
                app:framePosition="100"
                app:motionTarget="@id/title_text" />

            <KeyPosition
                app:framePosition="25"
                app:keyPositionType="parentRelative"
                app:motionTarget="@id/description_text"
                app:percentX="0.5"
                app:percentY="1.1" />

            <KeyPosition
                app:framePosition="85"
                app:keyPositionType="parentRelative"
                app:motionTarget="@id/description_text"
                app:percentX="0.5"
                app:percentY="1.1" />

            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="25"
                app:motionTarget="@id/description_text" />

            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="85"
                app:motionTarget="@id/description_text" />

            <KeyAttribute
                android:alpha="1.0"
                app:framePosition="100"
                app:motionTarget="@id/description_text" />
        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/swipeLeftReset"
        app:constraintSetEnd="@id/start"
        app:constraintSetStart="@id/end"
        app:duration="1">
    </Transition>

    <Transition
        android:id="@+id/swipeRightReset"
        app:constraintSetEnd="@id/startRight"
        app:constraintSetStart="@id/endRight"
        app:duration="1">
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/image_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/description_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread" />

        <Constraint
            android:id="@+id/description_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_sign" />

        <Constraint
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/description_text"
            app:layout_constraintEnd_toEndOf="@id/description_background"
            app:layout_constraintStart_toStartOf="@id/description_background"
            app:layout_constraintTop_toTopOf="@+id/description_background"
            app:layout_constraintVertical_chainStyle="packed" />

        <Constraint
            android:id="@id/description_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/description_background"
            app:layout_constraintEnd_toEndOf="@id/description_background"
            app:layout_constraintStart_toStartOf="@id/description_background"
            app:layout_constraintTop_toBottomOf="@+id/title_text" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/image_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/description_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread" />

        <Constraint
            android:id="@+id/description_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_sign" />

        <Constraint
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/description_text"
            app:layout_constraintEnd_toEndOf="@id/description_background"
            app:layout_constraintStart_toStartOf="@id/description_background"
            app:layout_constraintTop_toTopOf="@+id/description_background"
            app:layout_constraintVertical_chainStyle="packed" />

        <Constraint
            android:id="@id/description_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/description_background"
            app:layout_constraintEnd_toEndOf="@id/description_background"
            app:layout_constraintStart_toStartOf="@id/description_background"
            app:layout_constraintTop_toBottomOf="@+id/title_text" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/startRight">
        <Constraint
            android:id="@+id/image_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/description_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread" />
        <Constraint
            android:id="@+id/description_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_sign" />

        <Constraint
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/description_text"
            app:layout_constraintEnd_toEndOf="@id/description_background"
            app:layout_constraintStart_toStartOf="@id/description_background"
            app:layout_constraintTop_toTopOf="@+id/description_background"
            app:layout_constraintVertical_chainStyle="packed" />

        <Constraint
            android:id="@id/description_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/description_background"
            app:layout_constraintEnd_toEndOf="@id/description_background"
            app:layout_constraintStart_toStartOf="@id/description_background"
            app:layout_constraintTop_toBottomOf="@+id/title_text" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/endRight">
        <Constraint
            android:id="@+id/image_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/description_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread" />
        <Constraint
            android:id="@+id/description_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_sign" />

        <Constraint
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/description_text"
            app:layout_constraintEnd_toEndOf="@id/description_background"
            app:layout_constraintStart_toStartOf="@id/description_background"
            app:layout_constraintTop_toTopOf="@+id/description_background"
            app:layout_constraintVertical_chainStyle="packed" />

        <Constraint
            android:id="@id/description_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/description_background"
            app:layout_constraintEnd_toEndOf="@id/description_background"
            app:layout_constraintStart_toStartOf="@id/description_background"
            app:layout_constraintTop_toBottomOf="@+id/title_text" />
    </ConstraintSet>
</MotionScene>